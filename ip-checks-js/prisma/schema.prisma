generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CATEGORIES {
  whitelist
  maintenance
  blacklist
  blocklogin
}

enum SCOPES {
  continent
  country
  ip
  ip_subnet
  all
}

enum State {
  enabled
  disabled
}

model restrictions {
  id         BigInt     @id @default(autoincrement())
  category   CATEGORIES
  scope      SCOPES
  value      String     @db.VarChar(64)
  code       Int?
  state      State      @default(enabled)
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
}
